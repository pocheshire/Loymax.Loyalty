<?xml version="1.0" encoding="UTF-8"?>
<resources>
<!--  Texts  -->
    <style
        name="AppTheme.TextAppearance.Header5"
        parent="">
        <item
            name="android:fontFamily">@font/roboto_regular</item>
        <item
            name="android:textSize">@dimen/text_h5</item>
        <item
            name="android:textColor">@color/textBase</item>
    </style>
<!--    -->
    <!--  Inputs  -->
    <style
        name  ="AppTheme.TextAppearance.Input"
        parent="">
        <item
            name="android:fontFamily">@font/roboto_regular</item>
        <item
            name="android:textSize">@dimen/input_text_size</item>
        <item
            name="android:textColor">@color/textBase</item>
    </style>
    <!--    -->
    <!--  TextInputLayout  -->
    <style
        name  ="AppTheme.Control.TextInputLayout"
        parent="AppTheme.TextAppearance.Input">
        <!-- Hint color and label color in FALSE state -->
        <item
            name="android:textColorHint">@color/placeholder</item>
        <item
            name="android:textColorHighlight">@color/accent</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item
            name="colorAccent">@color/accent</item>
        <item
            name="colorControlNormal">@color/disabledControl</item>
        <item
            name="colorControlActivated">@color/highlightedControl</item>
    </style>
    <style
        name  ="AppTheme.Control.TextInputLayout.HintTextAppearance"
        parent="">
        <item
            name="android:textColor">@color/accent</item>
        <item
            name="android:textSize">@dimen/input_hint_text_size</item>
    </style>
    <style
        name  ="AppTheme.Control.TextInputLayout.ErrorTextAppearance"
        parent="">
        <item
            name="android:textColor">@color/invalid</item>
        <item
            name="android:textSize">@dimen/input_error_text_size</item>
    </style>
    <!--    -->
    <style
        name  ="AppTheme.Control.Button"
        parent="">
        <item
            name="android:layout_width">wrap_content</item>
        <item
            name="android:layout_height">@dimen/button_height</item>
        <item
            name="android:textAllCaps">true</item>
    </style>
    <style
        name  ="AppTheme.Control.Button.Base"
        parent="AppTheme.Control.Button">
        <item
            name="android:background">@drawable/control_button_base</item>
        <item
            name="android:textColor">@color/white</item>
        <item
            name="android:textSize">@dimen/button_text_size</item>
        <item
            name="android:fontFamily">@font/roboto_bold</item>
    </style>
</resources>