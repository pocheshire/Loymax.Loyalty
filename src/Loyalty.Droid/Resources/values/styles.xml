<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <!--  Texts  -->
    <style
        name  ="AppTheme.TextAppearance.Header"
        parent="">
        <item
            name="android:fontFamily">@font/roboto_bold</item>
        <item
            name="android:textColor">@color/accent</item>
    </style>
    <style
        name  ="AppTheme.TextAppearance.Header4"
        parent="AppTheme.TextAppearance.Header">
        <item
            name="android:textSize">@dimen/text_h4</item>
    </style>
    <style
        name  ="AppTheme.TextAppearance.Header5"
        parent="AppTheme.TextAppearance.Header">
        <item
            name="android:textSize">@dimen/text_h5</item>
    </style>
    <style
        name  ="AppTheme.TextAppearance.Header6"
        parent="AppTheme.TextAppearance.Header">
        <item
            name="android:fontFamily">@font/roboto_medium</item>
        <item
            name="android:textSize">@dimen/text_h6</item>
        <item
            name="android:textColor">@color/textBase</item>
    </style>
    <style
        name  ="AppTheme.TextAppearance.Body"
        parent="">
        <item
            name="android:fontFamily">@font/roboto_regular</item>
        <item
            name="android:textColor">@color/textBase</item>
    </style>
    <style
        name  ="AppTheme.TextAppearance.Body1"
        parent="AppTheme.TextAppearance.Body">
        <item
            name="android:textSize">@dimen/text_body1</item>
    </style>
    <style
        name  ="AppTheme.TextAppearance.Body2"
        parent="AppTheme.TextAppearance.Body">
        <item
            name="android:textSize">@dimen/text_body2</item>
    </style>
    <style
        name  ="AppTheme.TextAppearance.Hint"
        parent="">
        <item
            name="android:fontFamily">@font/roboto_regular</item>
        <item
            name="android:textColor">@color/accent</item>
        <item
            name="android:lineSpacingExtra">9dp</item>
    </style>
    <style
        name  ="AppTheme.TextAppearance.Hint1"
        parent="AppTheme.TextAppearance.Hint">
        <item
            name="android:textSize">@dimen/text_body1</item>
    </style>
    <!--    -->
    <!--  Inputs  -->
    <style
        name  ="AppTheme.TextAppearance.Input"
        parent="">
        <item
            name="android:fontFamily">@font/roboto_regular</item>
        <item
            name="android:textSize">@dimen/input_text_size</item>
        <item
            name="android:textColor">@color/textBase</item>
    </style>
    <!--    -->
    <!--  TextInputLayout  -->
    <style
        name  ="AppTheme.Control.TextInputLayout"
        parent="AppTheme.TextAppearance.Input">
        <!-- Hint color and label color in FALSE state -->
        <item
            name="android:textColorHint">@color/placeholder</item>
        <item
            name="android:textColorHighlight">@color/accent</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item
            name="colorAccent">@color/accent</item>
        <item
            name="colorControlNormal">@color/disabledControl</item>
        <item
            name="colorControlActivated">@color/accent</item>
    </style>
    <style
        name  ="AppTheme.Control.TextInputLayout.HintTextAppearance"
        parent="">
        <item
            name="android:textColor">@color/accent</item>
        <item
            name="android:textSize">@dimen/input_hint_text_size</item>
    </style>
    <style
        name  ="AppTheme.Control.TextInputLayout.ErrorTextAppearance"
        parent="">
        <item
            name="android:textColor">@color/invalid</item>
        <item
            name="android:textSize">@dimen/input_error_text_size</item>
    </style>
    <!--    -->
    <!--  Button  -->
    <style
        name  ="AppTheme.Control.Button"
        parent="">
        <item
            name="android:layout_width">match_parent</item>
        <item
            name="android:layout_height">@dimen/button_height</item>
        <item
            name="android:textAllCaps">true</item>
        <item
            name="android:textSize">@dimen/button_text_size</item>
        <item
            name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style
        name  ="AppTheme.Control.Button.Base"
        parent="AppTheme.Control.Button">
        <item
            name="android:background">@drawable/control_button_base</item>
        <item
            name="android:textColor">@color/white</item>
        <item
            name="android:layout_margin">@dimen/button_base_margins</item>
        <item
            name="android:stateListAnimator">@null</item>
    </style>
    <style
        name  ="AppTheme.Control.Button.Text"
        parent="AppTheme.Control.Button">
        <item
            name="android:layout_width">wrap_content</item>
        <item
            name="android:background">@null</item>
        <item
            name="android:textColor">@color/accent</item>
    </style>
    <!--    -->
<!--  Dividers  -->
    <style
        name="AppTheme.Control.Divider"
        parent="">
        <item
            name="android:background">@color/divider</item>
        <item
            name="android:layout_height">@dimen/divider_height</item>
        <item
            name="android:layout_width">match_parent</item>
    </style>
<!--    -->
</resources>